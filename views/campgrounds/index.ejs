<% include ../partial/header %>


     <header class="jumbotron">
       <div class="container">
          <h1><span class="glyphicon glyphicon-tent"></span> Welcome To Splendid!</h1>
          <p>Discover and explore the world!</p>
          <p>
                
          </p> 
          <p>
               
               <form action="/campgrounds" method = "GET" class="form-inline ">
                    <div>
                         <div class="row">
                           <input type="text" name="search" placeholder = "e.g. Yellow Stone" class="form-control">
                           <button id="search" type="submit" class="btn btn-default "><span class="glyphicon glyphicon-search"></span> Search</button>
                           <a id="newCamp" class="btn-primary btn-lg" href="/campgrounds/new"><span class="glyphicon glyphicon-plus"></span> Upload Images</a>
                         </div>
                         
                    </div>
               </form>
              
          </p>
     </div>
     </header>
     
     
    
     <div class="row">
          <div class="col-lg-12">
               <h3>Our Most Popular Images</h3>
          </div>
     </div>
     
     
     <div class="row text-center" style="display:flex; flex-wrap:wrap">
       <div class="col-md-12">
           <% if(noMatch){ %>
                 <br>
                 <h3> <%= noMatch %> </h3>
           <% } %>
              
       </div>
       
          <% campgrounds.forEach(function(campground){ %>
          <div class="col-md-3 col-sm-6">
               <div class="thumbnail">
                    <img src = "<%= campground.image %>">
                    <div class="caption">
                         <h4><%= campground.name %></h4>
                    </div>
                    <p>
                         <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
               </div>
          </div>
             
          <%  }); %>
     </div>


<% include ../partial/footer %>