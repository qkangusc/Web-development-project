                   <% } %>
                 <% } else if(!currentUser){ %>
                      <%  console.log("!!!") %>
                     <a class="pull-right btn btn-default"  href="/campgrounds/<%= campground._id %>/<%= campground._id %>/like"><span class="glyphicon glyphicon-heart-empty"></span> Like <%= campground.like %></a>
                    <% }  else {　%>
                        <%  console.log("=====") %>
                          <%  console.log(currentUser._id) %>
                         <%  console.log(currentUser.username) %>
                         <%  console.log(campground._id) %>
                          <%  console.log("=====") %>
                         <% var temp = false %>
                    　　 <% for (var i = 0; i < currentUser.likes.length; i++) { %>
                    　　  <% if(currentUser.likes[i].equals(campground._id)){ %>
                    　　  <%   console.log("MATCH!!!!") %>
                    　　  <%   temp = true %>
                    　　  <% break } %>
                    　　 <% } %>
                    　　
                    　　 <% if(temp === true){ %>
                    　　   <a class="pull-right btn btn-default"  href="/campgrounds/<%= campground._id %>/<%= currentUser._id %>/dislike"><span style="color:red;" class="glyphicon glyphicon-heart"></span> Like <%= campground.like %></a>
                         <% } else { %>
                             <a class="pull-right btn btn-default"  href="/campgrounds/<%= campground._id %>/<%= currentUser._id %>/like"><span class="glyphicon glyphicon-heart-empty"></span> Like <%= campground.like %></a>
                         <% } %>
                    <% } %>     
                    <p>
                        
                      <em>Submitted by:<a href="/users/<%= campground.author.id %>"> <%= campground.author.username %></a>, <%= moment(campground.createdAt).fromNow() %></em>
                    </p>
